{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://trendlab.local/schemas/strategy-artifact.schema.json",
  "title": "StrategyArtifact",
  "description": "Exported strategy configuration for Pine Script parity validation",
  "type": "object",
  "required": [
    "schema_version",
    "strategy_id",
    "symbol",
    "timeframe",
    "indicators",
    "rules",
    "fill_model",
    "cost_model",
    "parameters",
    "parity_vectors"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version for forward compatibility",
      "examples": ["1.0.0"]
    },
    "strategy_id": {
      "type": "string",
      "description": "Unique identifier for the strategy",
      "examples": ["donchian_breakout"]
    },
    "strategy_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Version of the strategy implementation"
    },
    "symbol": {
      "type": "string",
      "description": "Trading symbol (ticker)",
      "examples": ["SPY", "AAPL"]
    },
    "timeframe": {
      "type": "string",
      "enum": ["1d", "1h", "4h", "1w"],
      "description": "Bar timeframe"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of artifact generation"
    },
    "data_range": {
      "type": "object",
      "description": "Date range of the backtest data",
      "properties": {
        "start": { "type": "string", "format": "date-time" },
        "end": { "type": "string", "format": "date-time" }
      },
      "required": ["start", "end"]
    },
    "indicators": {
      "type": "array",
      "description": "Indicator definitions used by the strategy",
      "items": {
        "type": "object",
        "required": ["id", "type", "params"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for this indicator instance",
            "examples": ["donchian_entry", "donchian_exit", "sma_20"]
          },
          "type": {
            "type": "string",
            "enum": ["donchian", "sma", "ema", "atr", "rsi", "macd", "bollinger"],
            "description": "Indicator type"
          },
          "params": {
            "type": "object",
            "description": "Indicator-specific parameters",
            "properties": {
              "lookback": { "type": "integer", "minimum": 1 },
              "period": { "type": "integer", "minimum": 1 },
              "source": { "type": "string", "enum": ["close", "high", "low", "open", "hl2", "hlc3", "ohlc4"] }
            }
          },
          "pine_expr": {
            "type": "string",
            "description": "Pine Script expression for this indicator",
            "examples": ["ta.highest(high, 10)", "ta.sma(close, 20)"]
          }
        }
      }
    },
    "rules": {
      "type": "object",
      "description": "Entry and exit rules",
      "required": ["entry", "exit"],
      "properties": {
        "entry": {
          "type": "object",
          "required": ["condition", "pine_condition"],
          "properties": {
            "condition": {
              "type": "string",
              "description": "Human-readable condition",
              "examples": ["close > donchian_entry.upper"]
            },
            "pine_condition": {
              "type": "string",
              "description": "Pine Script v6 boolean expression",
              "examples": ["close > ta.highest(high[1], 10)"]
            },
            "position_required": {
              "type": "string",
              "enum": ["flat", "long", "short", "any"],
              "default": "flat"
            }
          }
        },
        "exit": {
          "type": "object",
          "required": ["condition", "pine_condition"],
          "properties": {
            "condition": {
              "type": "string",
              "description": "Human-readable condition",
              "examples": ["close < donchian_exit.lower"]
            },
            "pine_condition": {
              "type": "string",
              "description": "Pine Script v6 boolean expression",
              "examples": ["close < ta.lowest(low[1], 5)"]
            },
            "position_required": {
              "type": "string",
              "enum": ["flat", "long", "short", "any"],
              "default": "long"
            }
          }
        }
      }
    },
    "fill_model": {
      "type": "string",
      "enum": ["NextOpen"],
      "description": "How signals are filled"
    },
    "cost_model": {
      "type": "object",
      "description": "Fee and slippage configuration",
      "required": ["fees_bps_per_side", "slippage_bps"],
      "properties": {
        "fees_bps_per_side": {
          "type": "number",
          "minimum": 0,
          "description": "Fees in basis points per side"
        },
        "slippage_bps": {
          "type": "number",
          "minimum": 0,
          "description": "Slippage in basis points"
        }
      }
    },
    "parameters": {
      "type": "object",
      "description": "Strategy parameters used in this configuration",
      "additionalProperties": {
        "oneOf": [
          { "type": "number" },
          { "type": "string" },
          { "type": "boolean" }
        ]
      }
    },
    "parity_vectors": {
      "type": "object",
      "description": "Test vectors for validating Pine Script parity",
      "required": ["vectors"],
      "properties": {
        "description": {
          "type": "string",
          "description": "Human-readable description of the test window"
        },
        "vectors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["ts", "ohlcv"],
            "properties": {
              "ts": {
                "type": "string",
                "format": "date-time",
                "description": "Bar timestamp"
              },
              "ohlcv": {
                "type": "object",
                "required": ["open", "high", "low", "close"],
                "properties": {
                  "open": { "type": "number" },
                  "high": { "type": "number" },
                  "low": { "type": "number" },
                  "close": { "type": "number" },
                  "volume": { "type": "number" }
                }
              },
              "indicators": {
                "type": "object",
                "description": "Indicator values at this bar",
                "additionalProperties": true
              },
              "signal": {
                "type": ["string", "null"],
                "enum": ["hold", "enter_long", "exit_long", "enter_short", "exit_short", null],
                "description": "Expected signal at this bar"
              },
              "position_after": {
                "type": "string",
                "enum": ["flat", "long", "short"],
                "description": "Position state after this bar"
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Optional additional metadata",
      "properties": {
        "run_id": { "type": "string" },
        "config_id": { "type": "string" },
        "notes": { "type": "string" }
      }
    }
  }
}
